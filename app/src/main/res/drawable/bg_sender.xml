<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!--Shadow Layer-->


    <item android:right="10dp">
        <shape android:shape="rectangle">
            <corners android:bottomRightRadius="0dp" android:radius="50dp" />
            <padding
                android:top="2px"
                android:bottom="2px"
                android:left="2px"
                android:right="2px" />
            <solid android:color="#05000000" />
        </shape>
    </item>

    <!--===============-->


    <item android:right="10dp">
        <shape android:shape="rectangle">
            <corners android:bottomRightRadius="0dp" android:radius="50dp" />
            <padding android:bottom="2px"
                android:top="2px"/>
            <solid android:color="#1B000000" />
        </shape>
    </item>

    <!--===============-->


    <item android:right="10dp">
        <shape android:shape="rectangle">
            <corners android:bottomRightRadius="0dp" android:radius="50dp" />
            <padding
                android:top="2px"
                android:bottom="2px"
                android:left="2px"
                android:right="2px" />
            <solid android:color="#18000000" />
        </shape>
    </item>

    <!--===============-->


    <!--ForeGround-->


    <item android:right="10dp">
        <shape android:shape="rectangle">
            <solid android:color="#D8DCDE" />
            <corners android:bottomRightRadius="0dp" android:radius="50dp" />
        </shape>
    </item>
</layer-list>